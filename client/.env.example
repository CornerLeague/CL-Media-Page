# Client Firebase configuration (required to use Firebase Auth on the client)
VITE_FIREBASE_API_KEY="your-api-key"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_APP_ID="your-app-id"

# Optional: provide auth domain explicitly; if omitted, it will default to
# `${VITE_FIREBASE_PROJECT_ID}.firebaseapp.com`
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"

# Optional extras
VITE_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"

# Dev override toggle: set to 'false' to require Firebase tokens
VITE_ALLOW_DEV_HEADER="false"

# Convenience default dev UID when dev header override is enabled
VITE_DEV_UID="dev-user"

# Vite dev server
# Frontend dev server port; set to 5002 for local dev
PORT=5002