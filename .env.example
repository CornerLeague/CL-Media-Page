# CornerLeague Media Page — Environment Example
# Copy this file to .env and fill in values for your local setup

# Runtime
NODE_ENV=development
PORT=5000

# Security
SESSION_SECRET=change-me-please

# Database (Postgres)
# Example: postgresql://USER:PASS@localhost:5432/cornerleague_dev
DATABASE_URL=

# Redis (optional but recommended for job queues)
# Default if unset: redis://127.0.0.1:6379
REDIS_URL=

# Job processing
# Enable background jobs (bullmq) — set to true/1/yes to enable
JOBS_ENABLED=false
JOB_QUEUE_PREFIX=jobs

# Background jobs intervals
# Live team-scoped scores refresh interval (default: 30000ms ~ 30s; min 10000ms, max 300000ms)
LIVE_SCORES_INTERVAL_MS=30000
# Featured sport-scoped refresh interval (default: 3600000ms ~ 1h; min 300000ms, max 86400000ms)
NONLIVE_SCORES_INTERVAL_MS=3600000
# Daily cleanup/maintenance cron time (default: 03:00 UTC)
CLEANUP_RUN_AT_CRON="0 3 * * *"

# Web scraping configuration
# Identify your bot politely and control scraping behavior
SCRAPER_USER_AGENT=CornerLeagueMedia/1.0 (+https://cornerleague.com/bot; contact@cornerleague.com)
SCRAPER_RATE_LIMIT_MS=2000
SCRAPER_TIMEOUT_MS=10000
SCRAPER_MAX_RETRIES=3

# Optional HTTP proxy for scraping (leave blank if not used)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Optional: DeepSeek API key (used by summary agent when enabled)
DEEPSEEK_API_KEY=

# Optional: Firebase service account for auth/session features
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# CORS configuration
# Comma-separated list of allowed origins (default in dev: http://localhost:5173,http://127.0.0.1:5173)
CORS_ORIGINS=
# Whether to allow credentials (cookies, auth headers) — defaults to true in development
CORS_CREDENTIALS=true

# Database performance monitoring
# Slow query threshold in milliseconds for logging (default 200ms, min 50ms, max 10000ms)
DB_SLOW_QUERY_MS=200

# Tiger MCP (Model Context Protocol) — optional local config for HTTP transport
# Host and port used when starting MCP via `npm run tiger:mcp:http`
TIGER_MCP_HOST=localhost
TIGER_MCP_PORT=8080